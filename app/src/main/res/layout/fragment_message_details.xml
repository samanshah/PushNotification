<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:padding="@dimen/margin_16">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notifIv"
            android:layout_width="@dimen/margin_64"
            android:layout_height="@dimen/margin_64"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_16"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/notifIv"
            app:layout_constraintTop_toTopOf="@+id/notifIv" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bodyTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_24"
            android:gravity="right"
            android:lineSpacingExtra="@dimen/margin_4"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifIv" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_16"
            android:gravity="right"
            android:textColor="@color/grey_90"
            android:textSize="@dimen/medium_text"
            app:layout_constraintBottom_toBottomOf="@+id/notifIv"
            app:layout_constraintRight_toLeftOf="@+id/notifIv" />

</androidx.constraintlayout.widget.ConstraintLayout>